<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rectangle"
    android:columnCount="4"
    android:rowCount="6"  >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center"
        android:layout_marginLeft="-5dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:scaleType="centerCrop"
        android:src="@drawable/bydefault" />

    <TextView
        android:id="@+id/title"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_row="2"
        android:fontFamily="sans-serif-light"
        android:text="Title of your Memory"
        android:textAllCaps="true"
        android:textColor="#33B5E5"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_row="3"
        android:text="Here will be situated text of your memory.\nYou can write as many text as you want!\nIt&apos;s beautiful! :)"
        android:textColor="#272727"
        android:textSize="17sp" />

    <TextView
        android:layout_width="580dp"
        android:layout_height="2dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center"
        android:layout_row="4"
        android:background="@drawable/rectangle"
        android:visibility="gone" />
    
	<ImageView
        android:id="@+id/edit"
        android:layout_column="0"
        android:layout_width="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_row="5"
        android:src="@android:drawable/ic_menu_edit"
        android:onClick="onClickEdit"
        android:visibility="gone" />
	
    <ImageView
        android:id="@+id/alarm"
        android:layout_column="1"
        android:layout_width="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_row="5"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:onClick="onClickAlarm"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/share"
        android:layout_column="2"
        android:layout_width="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_row="5"
        android:src="@android:drawable/ic_menu_share"
        android:onClick="onClickShare"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/delete"
        android:layout_column="3"
        android:layout_width="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_row="5"
        android:src="@android:drawable/ic_menu_delete"
        android:onClick="onClickDelete"
        android:visibility="gone" />

</GridLayout>